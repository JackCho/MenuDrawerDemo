<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/hire_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/hire_item_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/hire_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hire_item_top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="@string/hire_item_title"
            android:textColor="#434343"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hire_item_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/hire_item_title"
            android:layout_below="@+id/hire_item_title"
            android:layout_marginTop="5dp"
            android:text="@string/hire_item_place"
            android:textColor="#7d7d7d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/hire_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hire_item_place"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/hire_item_place"
            android:text="2014-03-24"
            android:textColor="#7d7d7d"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/hire_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hire_item_time"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/hire_item_linlayout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_01" />

        <LinearLayout
            android:id="@+id/hire_item_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hire_item_img"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>